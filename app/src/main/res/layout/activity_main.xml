<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appbar"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical">

    <!--android:theme="?attr/actionBarTheme"-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:background="@color/bg_tint"
        android:padding="2dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="@string/app_name_cap"
            android:textColor="@color/button_bg"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/contact_input"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:autofillHints="name"
        android:hint="@string/contact_name_hint"
        android:inputType="textPersonName"
        android:padding="40dp" />

    <EditText
        android:id="@+id/message_input"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:autofillHints="message"
        android:hint="@string/message_hint"
        android:inputType="textMultiLine"
        android:padding="40dp" />

    <EditText
        android:id="@+id/phone_num_input"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:autofillHints="phone number"
        android:hint="@string/phone_num_hint"
        android:inputType="phone"
        android:padding="40dp" />

    <Button
        android:id="@+id/time_picker"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/button_bg"
        android:padding="40dp"
        android:text="@string/time_picker_text"
        android:textColor="@color/button_text" />

    <EditText
        android:id="@+id/notify_before_input"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:autofillHints="number"
        android:hint="@string/notify_hint"
        android:inputType="number"
        android:padding="40dp" />

    <Button
        android:id="@+id/schedule_button"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/button_bg"
        android:padding="40dp"
        android:text="@string/schedule_btn"
        android:textColor="@color/button_text" />

</LinearLayout>