<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.whatsappschedulerapp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/time_picker_bg</item>
        <item name="colorOnPrimary">@color/button_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bg_tint</item>
        <item name="colorOnSecondary">@color/time_picker_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Date Picker Dialog Theme -->
    <style name="CustomDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/main_dark</item>
        <item name="colorAccent">@color/main</item>
        <item name="android:colorAccent">@color/main</item>
        <item name="colorControlActivated">@color/main</item>
        <item name="android:colorControlActivated">@color/main</item>
        <item name="colorSurface">@color/time_picker_bg_opaque</item>
        <item name="colorOnSurface">@color/button_text</item>
        <item name="android:windowBackground">@color/time_picker_bg_opaque</item>
        <item name="android:textColorPrimary">@color/button_text</item>
        <item name="android:textColorSecondary">@color/button_text</item>
    </style>

    <!-- Time Picker Dialog Theme -->
    <style name="CustomTimePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/main_dark</item>
        <item name="colorAccent">@color/main</item>
        <item name="android:colorAccent">@color/main</item>
        <item name="colorControlActivated">@color/main</item>
        <item name="android:colorControlActivated">@color/main</item>
        <item name="colorSurface">@color/time_picker_bg_opaque</item>
        <item name="colorOnSurface">@color/button_text</item>
        <item name="android:windowBackground">@color/time_picker_bg_opaque</item>
        <item name="android:textColorPrimary">@color/button_text</item>
        <item name="android:textColorSecondary">@color/button_text</item>
        <!-- Additional time picker specific attributes -->
        <item name="android:timePickerStyle">@style/CustomTimePickerStyle</item>
    </style>

    <!-- Custom Time Picker Style -->
    <style name="CustomTimePickerStyle" parent="android:Widget.Material.TimePicker">
        <item name="android:timePickerMode">clock</item>
        <item name="android:headerBackground">@color/main</item>
        <item name="android:numbersBackgroundColor">@color/time_picker_bg_opaque</item>
        <item name="android:numbersTextColor">@color/button_text</item>
        <item name="android:numbersSelectorColor">@color/main</item>
    </style>

</resources>